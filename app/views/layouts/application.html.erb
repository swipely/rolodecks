<!DOCTYPE html>
<html>
<head>
  <title>Rolodecks</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
  <header class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to "Rolodecks", root_url, id: "logo" %>
        <nav>
          <ul class="nav">
            <li><%= link_to "Home", root_url %></li>
            <li><%= link_to "New Contact", new_contact_url %></li>
<% if @current_user.present? %>
            <li><%= link_to "My Connections", connections_url %></li>
            <li><%= link_to "Suggested Contacts", suggested_contacts_url %></li>
<% end %>
          </ul>
        </nav>
<% if @current_user.present? %>
        <div class="logged-in">Logged in as <span class="name"><%= @current_user.first_name %></span></div>
<% end %>
      </div>
    </div>
  </header>

  <div class="container">

    <% if flash[:notice] %>
      <div class="alert alert-info">
        <button class="close" data-dismiss="alert">Ã—</button>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
